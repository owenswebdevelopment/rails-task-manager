<div class="container">
<%= form_with model: task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control' %>

<%= f.label :completed %>
  <%= f.check_box  :completed, class: 'm-3' %>
  <%= f.submit "Submit", class: 'btn btn-primary mt-3' %>
<% end %>
</div>
